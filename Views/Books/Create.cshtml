@model Book 

@{
	ViewData["Title"] = "Create Book";
}
<h1>Create New Book</h1>
<hr />
<div> 
	<div class="col-md-6">
		<form asp-action="Create">
			@Html.AntiForgeryToken()
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group mb-3">
				<label asp-for="Title" class="form-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" calss="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="Author" class="form-label"></label>
				<input asp-for="Author" class="form-control" />
				<span asp-validation-for="Author" calss="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="price" class="form-label"></label>
				<input asp-for="price" class="form-control" />
				<span asp-validation-for="price" calss="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="quantity" class="form-label"></label>
				<input asp-for="quantity" class="form-control" />
				<span asp-validation-for="quantity" calss="text-danger"></span>
			</div>

			<div class="form-group">
				<button type="Submit" class="btn btn-primary">
					<i class="bi bi-check-circle"></i>Create
				</button>
				<a asp-action="Index" class="btn btn-secondary">
					<i class="bi bi-arrow-left-circle"></i>Back To List
				</a>

			</div>

		</form>

	</div>
</div>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}